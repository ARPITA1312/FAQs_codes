//Harmonic Series


#include <iostream>
using namespace std;

float findSum(int n)
{
    float sum = 0;

    for (float i = 1; i <= n; i++)
    {
        sum += 1 / i;
    }

    return sum;
}

int main()
{
    int n;

    cout
        << "Enter the value of n: "
        << endl;
    cin >> n;

    cout << "Sum: " << findSum(n) << endl;
}


